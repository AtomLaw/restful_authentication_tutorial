<div id="debug">
  <a href="#" onclick="Element.toggle('params_debug_info');return false">params</a> |
  <a href="#" onclick="Element.toggle('session_debug_info');return false">session</a> |
  <a href="#" onclick="Element.toggle('env_debug_info');return false">env</a> |
  <a href="#" onclick="Element.toggle('request_debug_info');return false">request</a> |
  <a href="#" onclick="Element.toggle('cookies_debug_info');return false">request</a> |
  <a href="#" onclick="Element.toggle('controller_debug_info');return false">controller stats</a> |
  <a href="#" onclick="Element.toggle('view_debug_info');return false">view stats</a> |
  <a href="#" onclick="Element.toggle('runtime_debug_info');return false">runtime stats</a>

  <fieldset id="params_debug_info" class="debug_info" style="display: none">
    <legend>params</legend>
      <%= debug(params) %>
  </fieldset>

  <fieldset id="session_debug_info" class="debug_info" style="display: none">
    <legend>session</legend>
      <%= debug(session) %>
  </fieldset>
  
  <fieldset id="env_debug_info" class="debug_info" style="display: none">
    <legend>env</legend>
      <%= debug(request.env) %>
  </fieldset>
  
  <fieldset id="request_debug_info" class="debug_info" style="display: none">
    <legend>request</legend>
      <%= debug(request) %>
  </fieldset>

  <fieldset id="cookies_debug_info" class="debug_info" style="display: none">
    <legend>request</legend>
      <%= debug(cookies) %>
  </fieldset>
  
  <fieldset id="controller_debug_info" class="debug_info" style="display: none">
    <legend>controller query stats</legend>
      <%= queries.count_with_label :controller %>
  </fieldset>
  
  <fieldset id="view_debug_info" class="debug_info" style="display: none">
    <legend>view query stats</legend>
      <%= queries.count_with_label :view %>
  </fieldset>
  
  <fieldset id="runtime_debug_info" class="debug_info" style="display: none">
    <legend>query runtime stats</legend>
      <%= queries.runtime %>
  </fieldset>
  
</div>
