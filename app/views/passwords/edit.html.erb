<h1>Reset your password</h1>
<% form_for "password", :url => password_url(params[:id]),
       :html => { :method => :put } do |f| %>
    Password:<br />
    <%= password_field_tag :password %><br />
    Confirm Password:<br />
    <%= password_field_tag :password_confirmation %><br />
    <%= submit_tag "Reset Your Password" %>
<% end %>


